{
  "manifest_version": 2,
  "name": "YouTube Voice Pause",
  "version": "1.0",
  "description": "Pauzuje film na YouTube, gdy m√≥wisz do mikrofonu, i wznawia go, gdy przestajesz.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "YouTube Voice Pause"
  }
}
